<div class="row">
    <div class="col-sm-10">
        <h3>Movie</h3>
    </div>
    <div class="col-sm-2">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/home">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Movie</li>
            </ol>
        </nav>
    </div>
</div>

<table class="table mt-3">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Genre</th>
        <th scope="col">Year</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
        <% let i = 1 %>
        <% data.forEach(movie => { %>
            <tr>
                <th scope="row"><%= i++ %></th>
                <td><%= movie.title %></td>
                <td><%= movie.genres %></td>
                <td><%= movie.year %></td>
                <td>
                    <a href="/movie/<%= movie.id %>" class="btn btn-outline-primary">Detail</a>
                    <a href="/movie/<%= movie.id %>" class="btn btn-outline-warning">Edit</a>
                    <a href="/movie/<%= movie.id %>" class="btn btn-outline-danger">Delete</a>
                </td>
              </tr>
        <% }) %>
    </tbody>
  </table>
